<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3000FF00"
    tools:context=".WeatherFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="12C\nCloudy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Hanoi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:contentDescription="Weather Icon"
            android:src="@drawable/cloudy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="443dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Mon" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/rainy" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Rain Heavily" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="22C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Tue" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/sun" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Sunny" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="24-25C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Wed" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/cloudy" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Mostly Cloudy" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="22C-24C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Thu" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/cloudy" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Partly Cloudy" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="19C-22C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Fri" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/rainy" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Rain Heavily" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="16C-18C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Sat" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/rainy" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Rain Heavily" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="18C-21C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:text="Sun" />

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:src="@drawable/sun" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="Sunny" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:paddingLeft="20dp"
                        android:text="22C-23C" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>